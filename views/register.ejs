<% include ../partials/header %><br>
  <div class="row">
    <div class="container">
      <div class="item">
        <h1><span class="fa fa-sign-in"></span> Signup</h1>
        <form action="/register" method="post">
          <div class="form-group">
            <label>Username</label>
            <input type="text" class="form-control" name="username", required>
          </div>
          <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email", pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$", required>
          </div>
          <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password", required>
          </div>
          <button type="submit" class="button">Signup</button>
        </form>
        <hr>
        <p>Already have an account? <br><a href="/login" class="button">Login</a></p>
        <p>Or go <br><a href="/" class="button">home</a>.</p>
      </div>
    </div>
  </div>
